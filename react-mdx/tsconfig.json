{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES2023",
    "allowJs": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "ts-node": {
    "typeCheck": false,
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}